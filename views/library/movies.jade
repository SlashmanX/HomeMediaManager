extends ../layout
block append scripts
	script(type='text/javascript', src='/javascripts/jquery.lazyload.min.js')
	script(type='text/javascript', src='/javascripts/views/library/movies.js')
block content
	h1= title
	.row
		each movie in movies
			- var orig = movie.poster;
			- var poster = orig.match(/<thumb[^>]*>([\s\S]*?)<\/thumb>/)[1];
			div(style='margin-bottom:30px').col-lg-3.col-md-4.col-xs-6
				.thumbnail
					img(data-original=poster, alt=movie.name).lazy
					.caption
						h3.movieTitle= movie.name
						p.synopsis= movie.synopsis
						p.metadata 
							span.rating= movie.rating
							span.year= movie.year

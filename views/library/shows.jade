extends ../layout
block append scripts
	script(type='text/javascript', src='/javascripts/jquery.lazyload.min.js')
	script(type='text/javascript', src='/javascripts/views/library/shows.js')
block content
	h1= title
	.row
		each show in shows
			- var orig = show.fanart;
			- var poster = 'http://thetvdb.com/banners/'+ orig.match(/<thumb[^>]*>([\s\S]*?)<\/thumb>/)[1];
			div(style='margin-bottom:30px').col-lg-3.col-md-4.col-xs-6
				.thumbnail
					img(data-original=poster, alt=show.name).lazy
					.caption
						h3.movieTitle
							a(href='/library/shows/#{show.showId}')=show.name
						p.synopsis= show.synopsis
						p.metadata 
							span.rating= show.rating
							span.episodeCount #{show.numEpisodes} Episodes

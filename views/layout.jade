doctype html
html
	head
		title= title
		meta(name='viewport', content='width=device-width, height=device-height, initial-scale=1.0, user-scalable=no, user-scalable=0')
		block css
			link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
			link(rel='stylesheet', href='/stylesheets/style.css')
		block scripts
			script(type='text/javascript', src='//code.jquery.com/jquery-2.1.1.min.js')
			script(type='text/javascript', src='/javascripts/bootstrap.min.js')
	body
		nav.navbar.navbar-default.navbar-static-top(role='navigation')
			.container
				.navbar-header
					button(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar').navbar-toggle.collapsed
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/') #{sitename}
				#navbar.navbar-collapse.collapse
					ul.nav.navbar-nav
						li.active
							a(href='/') Home
						li.dropdown
							a(href='#', data-toggle='dropdown', role='button' aria-expanded='false').dropdown-toggle Library <span class="caret"></span>
							ul(role='menu').dropdown-menu
								li
									a(href='/library/shows') Shows
								li
									a(href='/library/movies') Movies
						li.dropdown
							a(href='#', data-toggle='dropdown', role='button' aria-expanded='false').dropdown-toggle Download <span class="caret"></span>
							ul(role='menu').dropdown-menu
								li
									a(href='/download/shows') Shows
								li
									a(href='/download/movies') Movies
								li
									a(href='/download/general') General
						if show_football
							li
								a(href='/football') Football
		.container
			block content